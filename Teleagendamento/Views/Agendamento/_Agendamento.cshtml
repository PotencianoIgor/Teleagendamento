@model Teleagendamento.Models.Agendamento

<div id="modal-agendamento" class="modal fade" style="margin-top:50px">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Dados do Paciente</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card" style="margin-top:10px">
                    <div class="card-body">
                        <div class="form-row">
                            <div class="col-sm-6 form-group">
                                <label asp-for="Paciente.Nome">Nome</label>
                                <div class="input-group">
                                    <input type="text" asp-for="Paciente.Nome" class="form-control" placeholder="">
                                </div>
                                <span asp-validation-for="Paciente.Nome"></span>
                            </div>
                            <div class="col-sm-3 form-group">
                                <label asp-for="Paciente.CPF">CPF</label>
                                <input class="form-control" asp-for="Paciente.CPF" type="text" placeholder="999.999.999-99">
                                <span asp-validation-for="Paciente.CPF"></span>
                            </div>
                            <div class="col-sm-3 form-group">
                                <label asp-for="Paciente.Telefone">Telefone</label>
                                <input class="form-control" asp-for="Paciente.Telefone" type="text" placeholder="(99) 9 9999-9999">
                                <span asp-validation-for="Paciente.Telefone"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-sm-6 form-group">
                                <label asp-for="Paciente.Email">Email</label>
                                <div class="input-group">
                                    <input type="text" asp-for="Paciente.Email" class="form-control" placeholder="">
                                </div>
                                <span asp-validation-for="Paciente.Email"></span>
                            </div>
                            <div class="form-group col-sm-3">
                                <div class="form-check">
                                    <input type="checkbox" asp-for="Paciente.PossuiConvenio" class="form-check-input">
                                    <label class="form-check-label" asp-for="Paciente.PossuiConvenio">Possúi convênio?</label>
                                </div>
                            </div>
                            <div class="col-sm-3 form-group">
                                <label asp-for="Paciente.NumeroConvenio">Nº do Convênio</label>
                                <input class="form-control" asp-for="Paciente.NumeroConvenio" type="text" placeholder="">
                                <span asp-validation-for="Paciente.NumeroConvenio"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="visualizar-agenda" class="btn btn-primary">Visualizar Agenda</button>
                <button type="button" formmethod="get" data-dismiss="modal" id="confirma-agendamento" class="btn btn-success">Confirmar</button>
            </div>
        </div>
    </div>
</div>

